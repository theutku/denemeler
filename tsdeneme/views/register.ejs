<!DOCTYPE html>
<html lang="en">

<head>
  <% include ./partials/head.ejs %>
</head>

<body>

  <div class="container">

    <% include ./partials/header.ejs %>

      <div class="jumbotron" id="loginPart">
        <h1>Register</h1>

        <form class="form-signin" method="post" action="/users/login">
          <h4 class="form-signin-heading">Login to Your Account</h4>
          <div class="input-group margin-bottom-sm">
            <span class="input-group-addon"><i class="fa fa-id-card-o" aria-hidden="true"></i></span>
            <input class="form-control" type="text" placeholder="First Name" name="name">
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
            <input class="form-control" type="password" placeholder="Last Name" name="lastName">
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
            <input class="form-control" type="password" placeholder="Username" name="userName">
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
            <input class="form-control" type="password" placeholder="E - Mail" name="email">
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
            <input class="form-control" type="password" placeholder="Password" name="password">
          </div>
          <br>
          <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
        </form>

      </div>



      <% include ./partials/footer.ejs %>

  </div>
  <!-- /container -->


  <% include ./partials/jsdefaults.ejs %>
</body>

</html>